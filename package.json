{
  "name": "demoapp-playwright-tests",
  "version": "1.0.0",
  "description": "Playwright data-driven test suite for Demo App",
  "type": "module",
  "scripts": {
    "test": "playwright test --project=chromium",
    "test:all": "playwright test --project=setup --project=no-auth --project=chromium",
    "test:headed": "playwright test --project=chromium --headed",
    "test:debug": "playwright test --project=chromium --debug",
    "test:ui": "playwright test --ui",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:browsers": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:timestamp": "TIMESTAMP_REPORT=true playwright test --project=chromium",
    "report": "playwright show-report",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv": "^16.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^0.22.0",
    "prettier": "^3.2.0",
    "typescript": "~5.3.3"
  },
  "author": "",
  "license": "ISC"
}
